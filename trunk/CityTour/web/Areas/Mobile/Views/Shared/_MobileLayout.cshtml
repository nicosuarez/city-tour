<!DOCTYPE html>
<html>
<head>
    <title>
        @TextStrings.CityTour
    </title>
    
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
    <link rel="apple-touch-icon" href="@Url.Content("~/Content/themes/mobile/images/iphone-icon.png")" />

    <link href="@Url.Content("~/Content/themes/mobile/jquery.mobile-1.1.1.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/mobile/site.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.mobile-1.1.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr.custom.js")" type="text/javascript"></script>
    <script type="text/javascript" src="//maps.googleapis.com/maps/api/js?key=AIzaSyB8R77stdNg_eXQLpwKEI1_uFyu8tLW2Sw&sensor=true"></script>
    <script src="@Url.Content("~/Scripts/citytour.mobile.js")" type="text/javascript"></script>
</head>
<body>
@if (IsSectionDefined("pageId"))
{
    @:<div id="@Html.AttributeEncode(RenderSection("pageId", false)).Trim()" data-role="page">
}
else 
{ 
    @:<div data-role="page">
}
        <div data-role="header" data-theme="b">
            @RenderSection("header", false)
	    </div>
        <div data-role="content">
            @RenderBody()
	    </div>
        <div data-role="footer" data-theme="b">
            @RenderSection("footer", false)
            <h4>
                Copyright &copy; @DateTime.UtcNow.Year @TextStrings.CityTour
            </h4>
        </div> 
    </div>
</body>
</html>
